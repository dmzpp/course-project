<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>
<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="main.controllers.AboutWSRController">
    <fx:include source="header.fxml"/>
    <BorderPane fx:id="contentBorder" styleClass="contentPane"
                prefHeight="920" prefWidth="Infinity">
        <top>
            <VBox alignment="TOP_CENTER">
                <Label style="-fx-font-size: 32; -fx-font-weight: bold">
                    O WorldSkills Russia
                </Label>
                <Label style="-fx-font-size: 20; -fx-wrap-text: true" maxWidth="400" prefWidth="400">
                    В 2012 году Россия присоединилась к движению WorldSkills International
                </Label>
            </VBox>
        </top>
        <left>
            <VBox alignment="TOP_CENTER" maxWidth="250" prefWidth="200" VBox.vgrow="ALWAYS"
                  style="-fx-border-width: 3; -fx-border-color: black; -fx-padding: 8; -fx-spacing: 10">
                <Button styleClass="about-wsr-button" prefWidth="Infinity" prefHeight="100" maxHeight="100"
                        text="Присоедниение России к движению WorldSkills International"/>
                <Button styleClass="about-wsr-button" prefWidth="Infinity" prefHeight="100" maxHeight="100"
                        text="Союз Ворлдскиллс Россия"/>
                <Button styleClass="about-wsr-button" prefWidth="Infinity" prefHeight="100" maxHeight="100"
                        text="Участники и результаты"/>
            </VBox>
        </left>
        <center>
            <HBox>
                <Region minWidth="15" prefWidth="15" maxWidth="15"/>
                <VBox alignment="TOP_CENTER" prefWidth="Infinity" minWidth="650"
                      style="-fx-border-width: 3; -fx-border-color: black; -fx-padding: 8; -fx-spacing: 10">
                    <!--                TODO-->
                    <Label style="-fx-font-weight: bold; -fx-font-size: 16">
                        Названия файлов
                    </Label>
                </VBox>
            </HBox>
        </center>
    </BorderPane>
</VBox>
