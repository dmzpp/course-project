<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx" spacing="15" alignment="TOP_CENTER"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="main.controllers.AdministratorMenuController">
    <fx:include source="signedUserHeader.fxml"/>
    <Label text="Меню администратора"
           style="-fx-font-size: 28; -fx-font-weight: bold"/>
    <VBox alignment="TOP_CENTER" style="-fx-padding: 10">
        <VBox style="-fx-border-color: black; -fx-border-width: 2; -fx-padding: 10"
              spacing="30" alignment="TOP_CENTER" VBox.vgrow="ALWAYS">
            <Label fx:id="welcomeTextLabel" text="Доброе утро"
                   style="-fx-font-size: 22; -fx-font-weight: bold"/>
            <Button text="Управление чемпионатами" styleClass="jump-button" onMouseClicked="#toManageChamps"
                    prefWidth="340" prefHeight="120"/>
            <Button text="Управление участниками" styleClass="jump-button" onMouseClicked="#toManageCompetitors"
                    prefWidth="340" prefHeight="120"/>
        </VBox>
    </VBox>
</VBox>
